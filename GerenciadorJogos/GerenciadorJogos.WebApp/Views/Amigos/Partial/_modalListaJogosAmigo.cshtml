@model GerenciadorJogos.WebApp.Models.AmigoViewModel

<!-- Modal -->
<div class="modal fade" id="modalListaJogosAmigo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Jogos emprestados para o @Model.Nome</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Plataforma</th>
                            <th scope="col">Data de empréstimo</th>
                            <th scope="col">Data prevista para devolução</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emprestimo in Model.ListaEmprestimos)
                        {
                            <tr>
                                <td>@emprestimo.Jogo.Nome</td>
                                <td>@emprestimo.Jogo.Plataforma</td>
                                <td>@emprestimo.DataEmprestimo.ToShortDateString()</td>
                                @if (emprestimo.DataDevolucao.HasValue)
                                {
                                    <td>@emprestimo.DataDevolucao.Value.ToShortDateString()</td>
                                }
                                else
                                {
                                    <td>Sabe-se lá quando...</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>